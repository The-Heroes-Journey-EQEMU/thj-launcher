<Window x:Class="THJPatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:THJPatcher"
        xmlns:views="clr-namespace:THJPatcher.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="THJ Installer" 
        Icon="Images/app.ico"
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Style="{StaticResource MaterialDesignWindow}">
        
    
    <Grid>
        <!-- Background Image -->
        <Image x:Name="BackgroundImage" 
               Source="/Images/Launcher_Window.png"
               Stretch="UniformToFill"/>

        <!-- Main Content -->
        <Grid>
            <!-- Custom Title Bar -->
            <Grid Height="30" 
                  VerticalAlignment="Top" 
                  Background="Transparent"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Width="30"
                        Height="30"
                        Content="✕"
                        FontSize="16"
                        FontFamily="Segoe UI Symbol"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Foreground="#D4AF37"
                        BorderBrush="Transparent"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CloseButton_Click"
                        Padding="0,2,2,0"/>

            </Grid>

            <!-- Rest of Content -->
            <Grid Margin="20,30,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Version Display -->
                <TextBlock x:Name="VersionDisplay" 
                          Grid.Row="0" 
                          Margin="10"
                          Foreground="White"/>

                <!-- Main Content Area -->
                <Grid Grid.Row="1">
                    <!-- Installation Wizard -->
                    <views:InstallationWizard x:Name="InstallWizard" 
                                            Visibility="Collapsed"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"/>

                    <!-- Status Area -->
                    <RichTextBox x:Name="ProcessStatus" 
                                 Background="#A6000000"
                                 Foreground="White"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 BorderThickness="0"
                                 MaxWidth="530"
                                 MaxHeight="500"
                                 Margin="0, 0, 0, 0">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Grid>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom">

                    <!-- Install Button -->
                    <Button x:Name="InstallGameButton"
                            Click="InstallGameButton_Click"
                            Width="200"
                            Height="50"
                            Margin="5, 5, 5, 25"
                            FontSize="18"
                            Padding="10,5"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="Transparent"
                            Foreground="#D4AF37"
                            BorderBrush="Transparent">
                        <Button.Content>
                            <TextBlock Text="Install Game"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"/>
                        </Button.Content>
                    </Button>



                    <!-- Check for Updates Button -->
                    <Button x:Name="CheckForUpdateButton"
                            Content="Check for Updates"
                            Click="CheckForUpdateButton_Click"
                            Margin="5"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            Visibility="Collapsed"/>

                    <!-- Play Game Button -->
                    <Button x:Name="PlayGameButton"
                            Content="Play Game"
                            Click="PlayGameButton_Click"
                            Margin="5"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Version number in bottom right -->
        <TextBlock x:Name="VersionText"
                   Text="v1.0.0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0,0,10,5"
                   Foreground="#D4AF37"
                   FontSize="12"/>
    </Grid>
</Window>
