<Window x:Class="THJPatcher.Views.WarningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warning" 
        Height="200" 
        Width="450"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="#FF202020"
            CornerRadius="10"
            BorderBrush="#D4AF37"
            BorderThickness="1">
        <StackPanel VerticalAlignment="Center"
                    Margin="20">
            <TextBlock Text="Please make sure EverQuest is not running during the installation process."
                      Foreground="#D4AF37"
                      FontSize="16"
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Continue"
                        Width="100"
                        Height="30"
                        Background="#FF202020"
                        Foreground="#D4AF37"
                        BorderBrush="#D4AF37"
                        Margin="0,0,10,0"
                        Click="ContinueButton_Click"/>
                <Button Content="Cancel"
                        Width="100"
                        Height="30"
                        Background="#FF202020"
                        Foreground="#D4AF37"
                        BorderBrush="#D4AF37"
                        Margin="10,0,0,0"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window> 